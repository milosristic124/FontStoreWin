<UserControl x:Class="UI.Controls.RadioCheckbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="20" Height="20" Foreground="{x:Null}" MinWidth="10" MinHeight="10" MaxWidth="20" MaxHeight="20" MouseLeftButtonUp="UserControl_MouseLeftButtonUp" Cursor="Hand">
  <Grid>
    <Border x:Name="Border" BorderThickness="1" CornerRadius="1000" Padding="2" Background="White">
      <Border.BorderBrush>
        <SolidColorBrush Color="{DynamicResource FSBlack}"/>
      </Border.BorderBrush>
      <Ellipse x:Name="Tick" Visibility="Hidden">
        <Ellipse.Fill>
          <SolidColorBrush Color="{DynamicResource FSGrey}"/>
        </Ellipse.Fill>
      </Ellipse>
    </Border>

  </Grid>
</UserControl>
